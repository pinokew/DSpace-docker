# Project / compose
COMPOSE_PROJECT_NAME=dspace9
TZ=Europe/Kyiv

# Network (щоб не ловити overlap — зафіксуй один subnet)
DSPACENET_SUBNET=172.23.0.0/16

# Registry / images
DOCKER_REGISTRY=docker.io
DOCKER_OWNER=dspace

# Versions
DSPACE_VER=latest-test
DSPACE_UI_VER=latest
POSTGRES_VERSION=15
SOLR_VER=9.8

POSTGRES_DB=dspace
POSTGRES_USER=dspace
POSTGRES_PASSWORD=dspace

# Host ports (на хості)
DSPACE_REST_PORT=8080
DSPACE_DEBUG_PORT=8000
DSPACE_UI_PORT=4000
DSPACE_UI_TEST_PORT=9876
POSTGRES_PORT=5432
SOLR_PORT=8983

# DSpace settings
DSPACE_NAME=DSpace Started with Docker Compose
PROXIES_TRUSTED_IPRANGES=172.23.0

# Bootstrap admin (для scripts/bootstrap-admin.sh)
# НЕ коміть реальний пароль у репо — лишай приклад
DSPACE_ADMIN_EMAIL=
DSPACE_ADMIN_FIRSTNAME=
DSPACE_ADMIN_LASTNAME=   
DSPACE_ADMIN_PASSWORD=

# SMTP (поки як заготовка)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=CHANGE_ME
MAIL_FROM=dspace-noreply@example.com
MAIL_ADMIN=dspace-admin@example.com
